{
  "name": "express-starter",
  "version": "1.1.0",
  "description": "A starter setup for Express, with PM2 support.",
  "homepage": "https://github.com/steven-xie/express-starter",
  "repository": "github:steven-xie/express-starter",
  "bugs": {
    "url": "https://github.com/steven-xie/express-starter/issues",
    "email": "1376678+steven-xie@users.noreply.github.com"
  },
  "author": "Steven Xie <hello@stevenxie.me> (https://stevenxie.me)",
  "license": "MIT",
  "config": {
    "devDebugLevel": "server:*, express:*",
    "prodDebugLevel": "server:critical,server:alert",
    "reloadBrowserOnChange": false
  },
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --watch 'dist/**/*.*' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/server.ts ",
    "prod": "NODE_ENV=production ts-node --transpile-only src/server.ts",
    "start": "npm run prod",
    "pm2": "pm2 start pm2.ecosystem.config.js --env production",
    "prettier": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "opn": "^5.3.0",
    "ts-node": "^6.0.0",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/debug": "^0.0.30",
    "@types/express": "^4.11.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.6",
    "@types/opn": "^5.1.0",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.1"
  }
}
