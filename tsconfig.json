{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017"],
    "rootDir": "src",
    "outDir": "./dist-server/out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": false,
  "include": [ "src/**/*.ts", "typings/index.d.ts" ]
}
