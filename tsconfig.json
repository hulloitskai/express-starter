{
  "compilerOptions": {
    "target": "es6",
    "typeRoots": ["node_modules/@types", "./typings"],
    "module": "commonjs",
    "lib": ["ESNEXT"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
