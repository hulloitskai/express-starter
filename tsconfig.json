{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017"],
    "rootDir": "src",
    "outDir": "./dist-server/out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ]
}
